{
  "name": "defi-scripts",
  "version": "1.0.0",
  "description": "Uniswap analytics scripts for DeFi/MEV builders and cross-chain analysis",
  "main": "src/index.js",
  "scripts": {
    "crosschain:uniswap:tvl": "node src/crosschain/uniswap/tvlTracker.js",
    "crosschain:uniswap:volume": "node src/crosschain/uniswap/volumeTracker.js",
    "crosschain:uniswap:liquidity": "node src/crosschain/uniswap/liquidityTracker.js",
    "crosschain:uniswap:weekly:tvl": "node src/crosschain/uniswap/weeklyTvlTracker.js",
    "crosschain:uniswap:weekly:volume": "node src/crosschain/uniswap/weeklyVolumeTracker.js",
    "crosschain:uniswap:weekly:liquidity": "node src/crosschain/uniswap/weeklyLiquidityTracker.js",
    "analytics:weekly:blocks": "node src/analytics/weeklyBlockAnalysis.js",
    "prettier": "prettier --write './**/*.{js,json,yaml,yml,sol}'",
    "lint:fix": "eslint . --ignore-path .eslintignore --ext .js,.sol --fix --quiet"
  },
  "keywords": [
    "uniswap",
    "defi",
    "mev",
    "cross-chain",
    "analytics"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.6.1",
    "ethers": "^6.15.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.2"
  }
}

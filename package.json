{
  "name": "defi-scripts",
  "version": "1.0.0",
  "description": "Uniswap analytics and swap scripts for DeFi/MEV builders and cross-chain analysis",
  "main": "src/index.js",
  "scripts": {
    "crosschain:uniswap:tvl": "node src/crosschain/uniswap/tvlTracker.js",
    "crosschain:uniswap:volume": "node src/crosschain/uniswap/volumeTracker.js",
    "crosschain:uniswap:liquidity": "node src/crosschain/uniswap/liquidityTracker.js",
    "crosschain:uniswap:weekly:tvl": "node src/crosschain/uniswap/weeklyTvlTracker.js",
    "crosschain:uniswap:weekly:volume": "node src/crosschain/uniswap/weeklyVolumeTracker.js",
    "crosschain:uniswap:weekly:liquidity": "node src/crosschain/uniswap/weeklyLiquidityTracker.js",
    "crosschain:curve:tvl": "node src/crosschain/curve/tvlTracker.js",
    "crosschain:curve:volume": "node src/crosschain/curve/volumeTracker.js",
    "crosschain:balancer:tvl": "node src/crosschain/balancer/tvlTracker.js",
    "crosschain:balancer:volume": "node src/crosschain/balancer/volumeTracker.js",
    "crosschain:sushiswap:tvl": "node src/crosschain/sushiswap/tvlTracker.js",
    "crosschain:sushiswap:volume": "node src/crosschain/sushiswap/volumeTracker.js",
    "analytics:weekly:blocks": "node src/analytics/weeklyBlockAnalysis.js",
    "swap:example": "node src/examples/swapExample.js",
    "swap:uniswap:v2": "node src/examples/v2SwapExample.js",
    "swap:uniswap:v3": "node src/examples/v3SwapExample.js",
    "swap:uniswap:v4": "node src/examples/v4SwapExample.js",
    "swap:crosschain": "node src/examples/crossChainSwapComparison.js",
    "swap:check": "node src/examples/checkWalletExample.js",
    "analytics:uniswap:prices": "node src/analytics/protocols/uniswap/priceMonitor.js",
    "analytics:curve:pools": "node src/analytics/protocols/curve/poolMonitor.js",
    "analytics:balancer:pools": "node src/analytics/protocols/balancer/poolMonitor.js",
    "analytics:sushiswap:pools": "node src/analytics/protocols/sushiswap/poolMonitor.js",
    "analytics:dex:prices": "node src/analytics/aggregators/dexPriceAggregator.js",
    "prettier": "prettier --write './**/*.{js,json,yaml,yml,sol}'",
    "lint:fix": "eslint . --ignore-path .eslintignore --ext .js,.sol --fix --quiet"
  },
  "keywords": [
    "uniswap",
    "defi",
    "mev",
    "cross-chain",
    "analytics",
    "swap",
    "uniswap-v2",
    "uniswap-v3",
    "uniswap-v4"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xjjda22/defi-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/xjjda22/defi-scripts/issues"
  },
  "homepage": "https://github.com/xjjda22/defi-scripts#readme",
  "dependencies": {
    "axios": "^1.13.2",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.6.1",
    "ethers": "^6.15.0",
    "ora": "^9.1.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.2"
  }
}

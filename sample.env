# RPC URLs for various chains
# Get free RPC URLs from: https://www.alchemy.com or https://infura.io

# Ethereum Mainnet
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Arbitrum
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Optimism
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Base
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# BSC (Alchemy doesn't support BSC, use public RPC)
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Gnosis
GNOSIS_RPC_URL=https://gnosis-mainnet.g.alchemy.com/v2/YOUR_GNOSIS_KEY

# ==================================================
# Token Swap Configuration (Required for swaps)
# ==================================================

# Private key for signing swap transactions
# WARNING: Keep this secret! Never commit to git!
# Generate a new wallet or use an existing one
PRIVATE_KEY=

# Default chain for swap operations
# Options: ethereum, arbitrum, optimism, base, polygon, bsc
CHAIN=ethereum

# Optional: Wallet address (for checking balances without private key)
# If not set, will derive from PRIVATE_KEY
WALLET_ADDRESS=

# ==================================================
# Fork Testing Configuration (Optional)
# ==================================================

# Test account address for fork testing
# Leave empty to use Anvil's default test account
TEST_ADDRESS=

# Fork block number (optional)
# Leave empty to fork from latest block
FORK_BLOCK_NUMBER=

# ==================================================
# Advanced Configuration (Optional)
# ==================================================

# Slippage tolerance in basis points (default: 50 = 0.5%)
DEFAULT_SLIPPAGE_BPS=50

# Transaction deadline in seconds (default: 1200 = 20 minutes)
TX_DEADLINE_SECONDS=1200

# Gas limit multiplier (default: 1.2 = 20% buffer)
GAS_LIMIT_MULTIPLIER=1.2
